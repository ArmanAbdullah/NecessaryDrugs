@using X.PagedList.Mvc.Core; <!--import to get HTML Helper-->
@using X.PagedList;
@model IEnumerable<NecessaryDrugs.Web.Areas.Client.Models.MedicineViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row m-1 item item-v2">
    @foreach (var item in Model)
    {
        <div class="col-sm-6 col-md-4 text-center item mt-2 item-v2">
            <div style="background-color:cornsilk;" class="rounded-lg p-2">
                <h3 class="text-dark pt-2"><a href="shop-single.html">@item.Name</a></h3>
                <a class="m-2" href="/client/medicine/details/@item.Id">
                    <img class="rounded m-2" src="~/admin/img/@item.Url"
                         asp-append-version="true" style='height:250px; width:300px;'>
                </a>
                <p class="price">@item.Price TK</p>
                <a href="/client/medicine/details/@item.Id" class="btn btn-outline-info">View Details</a>
            </div>
        </div>
    }
    <div class="col-md-12 mt-2">
        <div align="right">
            @Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page = page }),
        new X.PagedList.Mvc.Core.Common.PagedListRenderOptions
        {
            DisplayItemSliceAndTotal = true,
            ContainerDivClasses = new[] { "navigation" },
            LiElementClasses = new[] { "page-item" },
            PageClasses = new[] { "page-link" },
        })
        </div>
    </div>
</div>


@section Scripts{
    <script>
        $(document).ready(function () {
            $('ul.pagination > li.disabled > a').addClass('page-link');
        });
    </script>
}
