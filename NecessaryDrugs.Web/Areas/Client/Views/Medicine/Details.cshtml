@model NecessaryDrugs.Web.Areas.Client.Models.MedicineViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="p-4 ">
    <div class="col-md-6 p-2" style="border:dotted">
        <h2>@Model.Name</h2>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Description :
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class="col-sm-2">
                Image :
            </dt>
            <dd class="col-sm-10">
                <img class="my-2" src="~/admin/img/@Model.Url"
                     asp-append-version="true" style='height:250px; width:300px;'>
            </dd>
            <dt class="col-sm-2">
                Price :
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Price) TK
            </dd>
        </dl>
        <div>
            <a class="btn btn-outline-info" href="/client/medicine/index" asp-action="Index">Back to List</a>
        </div>
    </div>

</div>


